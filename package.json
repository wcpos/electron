{
  "name": "@wcpos/app-electron",
  "license": "MIT",
  "productName": "WooCommerce POS",
  "version": "1.3.1",
  "description": "Electron app for WooCommerce POS",
  "author": "Paul Kilmurray <paul@wcpos.com>",
  "main": ".webpack/main",
  "scripts": {
    "start": "concurrently \"yarn start:expo\" \"yarn start:electron\"",
    "start:expo": "ELECTRON=true yarn workspace @wcpos/managed-expo start --port 8088 --https",
    "start:electron": "yarn && NODE_ENV=\"development\" electron-forge start",
    "rebuild:all": "electron-rebuild -v 24.7.0 -f",
    "package": "DEBUG=electron-osx-sign* electron-forge package",
    "make": "electron-forge make",
    "publish-app": "electron-forge publish",
    "lint": "eslint --ext .tsx --ext .ts ./",
    "test": "echo 'Nothing to test'",
    "ts:check": "yarn tsc --noEmit"
  },
  "dependencies": {
    "@sentry/electron": "^4.9.0",
    "@transifex/native": "^5.4.0",
    "axios": "^1.4.0",
    "better-sqlite3": "8.5.0",
    "electron-log": "5.0.0-beta.25"
  },
  "devDependencies": {
    "@electron-forge/cli": "^6.2.1",
    "@electron-forge/maker-deb": "^6.2.1",
    "@electron-forge/maker-dmg": "^6.2.1",
    "@electron-forge/maker-rpm": "^6.2.1",
    "@electron-forge/maker-squirrel": "^6.2.1",
    "@electron-forge/maker-zip": "^6.2.1",
    "@electron-forge/plugin-auto-unpack-natives": "^6.2.1",
    "@electron-forge/plugin-webpack": "^6.2.1",
    "@electron-forge/publisher-github": "^6.2.1",
    "@electron-forge/shared-types": "^6.2.1",
    "@electron/rebuild": "3.2.13",
    "@types/webpack-node-externals": "^3.0.0",
    "@vercel/webpack-asset-relocator-loader": "^1.7.3",
    "@wcpos/eslint-config": "*",
    "concurrently": "^8.2.0",
    "electron": "26.1.0",
    "electron-debug": "^3.2.0",
    "electron-devtools-installer": "^3.2.0",
    "electron-forge-maker-appimage": "https://github.com/logseq/electron-forge-maker-appimage.git",
    "electron-squirrel-startup": "^1.0.0",
    "electron-store": "^8.1.0",
    "electron-updater": "^6.1.4",
    "node-loader": "^2.0.0",
    "ts-loader": "^9.4.4",
    "ts-node": "^10.9.1",
    "typescript": "~5.1.6"
  },
  "packageManager": "yarn@3.3.1",
  "eslintConfig": {
    "extends": "@wcpos/eslint-config"
  }
}

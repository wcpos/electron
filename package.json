{
	"name": "@wcpos/app-electron",
	"productName": "WooCommerce POS",
	"description": "Electron app for WooCommerce POS",
	"version": "1.0.0-alpha.52",
	"private": true,
	"author": "kilbot <paul@kilbot.com>",
	"contributors": [
		{
			"name": "Electron React Boilerplate Maintainers",
			"email": "electronreactboilerplate@gmail.com",
			"url": "https://electron-react-boilerplate.js.org"
		}
	],
	"main": "./src/main/main.ts",
	"scripts": {
		"build": "concurrently \"npm run build:main\" \"npm run build:renderer\"",
		"build:main": "cross-env NODE_ENV=production TS_NODE_TRANSPILE_ONLY=true webpack --config ./.erb/configs/webpack.config.main.prod.ts",
		"build:renderer": "cross-env NODE_ENV=production TS_NODE_TRANSPILE_ONLY=true webpack --config ./.erb/configs/webpack.config.renderer.prod.ts",
		"postinstall": "ts-node .erb/scripts/check-native-dep.js && electron-builder install-app-deps && cross-env NODE_ENV=development TS_NODE_TRANSPILE_ONLY=true webpack --config ./.erb/configs/webpack.config.renderer.dev.dll.ts",
		"lint": "cross-env NODE_ENV=development eslint . --ext .js,.jsx,.ts,.tsx",
		"package": "ts-node ./.erb/scripts/clean.js dist && npm run build && electron-builder --x64 build --publish never",
		"prepare": "husky install",
		"rebuild": "electron-rebuild --parallel --types prod,dev,optional --module-dir release/app",
		"start": "ts-node ./.erb/scripts/check-port-in-use.js && npm run start:renderer",
		"start:main": "cross-env NODE_ENV=development electronmon -r ts-node/register/transpile-only .",
		"start:preload": "cross-env NODE_ENV=development TS_NODE_TRANSPILE_ONLY=true webpack --config ./.erb/configs/webpack.config.preload.dev.ts",
		"start:renderer": "cross-env NODE_ENV=development TS_NODE_TRANSPILE_ONLY=true webpack serve --config ./.erb/configs/webpack.config.renderer.dev.ts",
		"test": "jest"
	},
	"lint-staged": {
		"*.{js,jsx,ts,tsx}": [
			"cross-env NODE_ENV=development eslint --cache"
		],
		"*.json,.{eslintrc,prettierrc}": [
			"prettier --ignore-path .eslintignore --parser json --write"
		],
		"*.{css,scss}": [
			"prettier --ignore-path .eslintignore --single-quote --write"
		],
		"*.{html,md,yml}": [
			"prettier --ignore-path .eslintignore --single-quote --write"
		]
	},
	"browserslist": [],
	"repository": {
		"type": "git",
		"url": "git+https://github.com/wcpos/electron.git"
	},
	"license": "MIT",
	"bugs": {
		"url": "https://github.com/wcpos/electron/issues"
	},
	"homepage": "https://github.com/wcpos/electron#readme",
	"jest": {
		"moduleDirectories": [
			"node_modules",
			"release/app/node_modules"
		],
		"moduleFileExtensions": [
			"js",
			"jsx",
			"ts",
			"tsx",
			"json"
		],
		"moduleNameMapper": {
			"\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "<rootDir>/.erb/mocks/fileMock.js",
			"\\.(css|less|sass|scss)$": "identity-obj-proxy"
		},
		"setupFiles": [
			"./.erb/scripts/check-build-exists.ts"
		],
		"testEnvironment": "jsdom",
		"testEnvironmentOptions": {
			"url": "http://localhost/"
		},
		"testPathIgnorePatterns": [
			"release/app/dist"
		],
		"transform": {
			"\\.(ts|tsx|js|jsx)$": "ts-jest"
		}
	},
	"installConfig": {
		"hoistingLimits": "dependencies"
	},
	"dependencies": {
		"@sentry/electron": "^4.0.2",
		"@wcpos/core": "*",
		"electron-debug": "^3.2.0",
		"electron-log": "^4.4.8",
		"fs-extra": "^10.1.0",
		"react": "^18.2.0",
		"react-dom": "^18.2.0",
		"react-native-reanimated": "2.6.0",
		"react-native-web": "~0.18.9",
		"update-electron-app": "^2.0.1"
	},
	"devDependencies": {
		"@babel/core": "^7.19.3",
		"@pmmmwh/react-refresh-webpack-plugin": "0.5.7",
		"@teamsupercell/typings-for-css-modules-loader": "^2.5.1",
		"@testing-library/jest-dom": "^5.16.5",
		"@testing-library/react": "^13.4.0",
		"@types/fs-extra": "^9.0.13",
		"@types/jest": "^29.1.1",
		"@types/node": "18.8.0",
		"@types/react": "^18.0.21",
		"@types/react-dom": "^18.0.6",
		"@types/react-test-renderer": "^18.0.0",
		"@types/sqlite3": "^3.1.8",
		"@types/terser-webpack-plugin": "^5.2.0",
		"@types/webpack-env": "^1.18.0",
		"@typescript-eslint/eslint-plugin": "^5.38.1",
		"@wcpos/babel-preset-expo": "*",
		"@wcpos/eslint-config": "*",
		"@wcpos/tsconfig": "*",
		"babel-loader": "^8.2.5",
		"babel-preset-expo": "9.2.0",
		"browserslist-config-erb": "^0.0.3",
		"chalk": "^4.1.2",
		"concurrently": "^7.4.0",
		"cross-env": "^7.0.3",
		"css-loader": "^6.7.1",
		"css-minimizer-webpack-plugin": "^4.1.0",
		"detect-port": "^1.5.1",
		"electron": "^21.0.1",
		"electron-builder": "23.6.0",
		"electron-devtools-installer": "^3.2.0",
		"electron-notarize": "^1.2.1",
		"electron-rebuild": "^3.2.9",
		"electronmon": "^2.0.2",
		"file-loader": "^6.2.0",
		"html-webpack-plugin": "^5.5.0",
		"husky": "^8.0.1",
		"identity-obj-proxy": "^3.0.0",
		"jest": "^29.1.1",
		"lint-staged": "^13.0.3",
		"mini-css-extract-plugin": "^2.6.1",
		"prettier": "^2.7.1",
		"react-refresh": "^0.14.0",
		"react-refresh-typescript": "^2.0.7",
		"react-test-renderer": "^18.2.0",
		"rimraf": "^3.0.2",
		"sass": "^1.55.0",
		"sass-loader": "^13.0.2",
		"style-loader": "^3.3.1",
		"terser-webpack-plugin": "^5.3.6",
		"ts-jest": "^29.0.3",
		"ts-loader": "^9.4.1",
		"ts-node": "^10.9.1",
		"typescript": "^4.8.4",
		"url-loader": "^4.1.1",
		"webpack": "^5.74.0",
		"webpack-bundle-analyzer": "^4.6.1",
		"webpack-cli": "^4.10.0",
		"webpack-dev-server": "^4.11.1",
		"webpack-merge": "^5.8.0"
	},
	"build": {
		"productName": "WooCommerce POS",
		"appId": "com.wcpos.electron",
		"asar": true,
		"asarUnpack": "**\\*.{node,dll}",
		"files": [
			"dist",
			"node_modules",
			"package.json"
		],
		"afterSign": ".erb/scripts/notarize.js",
		"mac": {
			"target": {
				"target": "default",
				"arch": [
					"arm64",
					"x64"
				]
			},
			"type": "distribution",
			"hardenedRuntime": true,
			"entitlements": "assets/entitlements.mac.plist",
			"entitlementsInherit": "assets/entitlements.mac.plist",
			"gatekeeperAssess": false,
			"icon": "./assets/square-icon.icns",
			"category": "public.app-category.business"
		},
		"dmg": {
			"contents": [
				{
					"x": 130,
					"y": 220
				},
				{
					"x": 410,
					"y": 220,
					"type": "link",
					"path": "/Applications"
				}
			]
		},
		"win": {
			"target": [
				"nsis"
			],
			"icon": "./assets/square-icon-512x512.png"
		},
		"linux": {
			"target": [
				"AppImage"
			],
			"category": "Office"
		},
		"directories": {
			"app": "release/app",
			"buildResources": "assets",
			"output": "release/build"
		},
		"extraResources": [
			"./assets/**"
		],
		"publish": {
			"provider": "github",
			"owner": "wcpos",
			"repo": "electron"
		}
	},
	"devEngines": {
		"node": ">=14.x",
		"npm": ">=7.x"
	},
	"electronmon": {
		"patterns": [
			"!**/**",
			"src/main/*"
		],
		"logLevel": "quiet"
	},
	"eslintConfig": {
		"extends": "@wcpos/eslint-config"
	}
}

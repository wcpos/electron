{
	"name": "@wcpos/app-electron",
	"productName": "WooCommerce POS",
	"description": "Electron app for WooCommerce POS",
	"private": true,
	"author": "kilbot <paul@kilbot.com>",
	"version": "1.0.0-alpha.17",
	"scripts": {
		"start": "expo-electron start",
		"build": "yarn electron-webpack",
		"package": "yarn build && yarn electron-builder --dir -c.compression=store",
		"package:nosign": "yarn build && yarn electron-builder --dir -c.compression=store -c.mac.identity=null"
	},
	"eslintConfig": {
		"extends": "@wcpos/eslint-config"
	},
	"browserslist": {
		"production": [
			"last 1 electron version"
		],
		"development": [
			"last 1 electron version"
		]
	},
	"build": {
		"appId": "com.wcpos.electron",
		"productName": "WooCommerce POS",
		"mac": {
			"icon": "./assets/square-icon.icns",
			"category": "public.app-category.business"
		},
		"win": {
			"icon": "./assets/square-icon-512x512.png"
		},
		"linux": {
			"target": [
				"AppImage"
			],
			"category": "Office"
		},
		"dmg": {
			"icon": false
		},
		"nsis": {
			"deleteAppDataOnUninstall": true
		},
		"extraMetadata": {
			"main": "main.js"
		},
		"files": [
			{
				"from": "dist/main/",
				"to": "./",
				"filter": [
					"**/*"
				]
			},
			{
				"from": "dist/renderer",
				"to": "./",
				"filter": [
					"**/*"
				]
			},
			"package.json",
			"**/node_modules/**/*",
			"assets"
		],
		"directories": {
			"buildResources": "assets"
		}
	},
	"dependencies": {
		"@wcpos/core": "*",
		"electron-log": "^4.4.7",
		"expo": "45.0.4",
		"update-electron-app": "^2.0.1"
	},
	"devDependencies": {
		"@expo/electron-adapter": "0.0.55",
		"@expo/webpack-config": "0.16.24",
		"@svgr/webpack": "5.5.0",
		"@wcpos/babel-preset-expo": "*",
		"@wcpos/eslint-config": "*",
		"electron": "18.2.3",
		"electron-builder": "^23.0.9",
		"electron-devtools-installer": "^3.2.0",
		"electron-webpack": "^2.8.2",
		"typescript": "4.6.4",
		"url-loader": "^4.1.1",
		"webpack": "4.46.0"
	}
}

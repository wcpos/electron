{
	"name": "@wcpos/app-electron",
	"license": "MIT",
	"productName": "WooCommerce POS",
	"version": "1.7.10",
	"description": "Electron app for WooCommerce POS",
	"author": "Paul Kilmurray <paul@wcpos.com>",
	"main": ".webpack/main",
	"scripts": {
		"start": "concurrently \"yarn start:expo\" \"yarn start:electron\"",
		"start:expo": "ELECTRON=true EXPO_NO_METRO_LAZY=true yarn workspace @wcpos/managed-expo start --port 8088",
		"start:electron": "yarn && NODE_ENV=\"development\" electron-forge start --enable-logging",
		"rebuild:all": "electron-rebuild -v 33.3.0 -f",
		"package": "DEBUG=electron-osx-sign* electron-forge package",
		"make": "electron-forge make",
		"publish-app": "electron-forge publish",
		"lint": "eslint --ext .tsx --ext .ts ./",
		"test": "echo 'Nothing to test'",
		"ts:check": "yarn tsc --noEmit"
	},
	"dependencies": {
		"@sentry/electron": "^5.9.0",
		"@transifex/native": "^7.1.3",
		"axios": "^1.7.9",
		"better-sqlite3": "11.7.0",
		"electron-log": "5.2.4",
		"electron-serve": "^2.1.1",
		"semver": "^7.6.3"
	},
	"devDependencies": {
		"@electron-forge/cli": "^7.6.0",
		"@electron-forge/maker-deb": "^7.6.0",
		"@electron-forge/maker-dmg": "^7.6.0",
		"@electron-forge/maker-rpm": "^7.6.0",
		"@electron-forge/maker-squirrel": "^7.6.0",
		"@electron-forge/maker-zip": "^7.6.0",
		"@electron-forge/plugin-auto-unpack-natives": "^7.6.0",
		"@electron-forge/plugin-webpack": "^7.6.0",
		"@electron-forge/publisher-github": "^7.6.0",
		"@electron-forge/shared-types": "^7.6.0",
		"@electron/rebuild": "3.7.1",
		"@types/better-sqlite3": "^7.6.12",
		"@types/fs-extra": "^11.0.4",
		"@types/webpack-node-externals": "^3.0.4",
		"@vercel/webpack-asset-relocator-loader": "1.7.3",
		"@wcpos/eslint-config": "*",
		"concurrently": "^8.2.2",
		"electron": "33.3.0",
		"electron-debug": "^4.1.0",
		"electron-devtools-installer": "^3.2.1",
		"electron-forge-maker-appimage": "https://github.com/logseq/electron-forge-maker-appimage.git#commit=afb3129f0e787b4e5a68663e1032293e506a59ee",
		"electron-squirrel-startup": "^1.0.1",
		"electron-store": "^10.0.0",
		"fs-extra": "^11.2.0",
		"node-loader": "^2.1.0",
		"ts-loader": "^9.5.1",
		"ts-node": "^10.9.2",
		"typescript": "~5.4.5"
	},
	"packageManager": "yarn@3.3.1",
	"eslintConfig": {
		"extends": "@wcpos/eslint-config"
	}
}

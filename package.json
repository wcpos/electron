{
	"name": "@wcpos/app-electron",
	"productName": "WooCommerce POS",
	"description": "Electron app for WooCommerce POS",
	"private": true,
	"author": "kilbot <paul@kilbot.com>",
	"version": "1.0.0-alpha.1",
	"scripts": {
		"start": "expo-electron start",
		"build": "yarn electron-webpack",
		"package": "yarn build && yarn electron-builder --dir -c.compression=store",
		"package:nosign": "yarn build && yarn electron-builder --dir -c.compression=store -c.mac.identity=null"
	},
	"eslintConfig": {
		"extends": "@wcpos/eslint-config"
	},
	"resolutions": {
		"react": "17.0.2",
		"react-dom": "18.1.0",
		"react-native": "0.64.3"
	},
	"browserslist": {
		"production": [
			"last 1 electron version"
		],
		"development": [
			"last 1 electron version"
		]
	},
	"build": {
		"appId": "com.wcpos.electron",
		"productName": "WooCommerce POS",
		"mac": {
			"icon": "./assets/square-icon.icns",
			"category": "public.app-category.business"
		},
		"win": {
			"icon": "./assets/square-icon-256x256.png"
		},
		"linux": {
			"target": [
				"AppImage"
			],
			"category": "Office"
		},
		"dmg": {
			"icon": false
		},
		"nsis": {
			"deleteAppDataOnUninstall": true
		},
		"extraMetadata": {
			"main": "main.js"
		},
		"files": [
			{
				"from": "dist/main/",
				"to": "./",
				"filter": [
					"**/*"
				]
			},
			{
				"from": "dist/renderer",
				"to": "./",
				"filter": [
					"**/*"
				]
			},
			"package.json",
			"**/node_modules/**/*",
			"assets"
		],
		"directories": {
			"buildResources": "assets"
		}
	},
	"dependencies": {
		"@react-native-community/netinfo": "8.3.0",
		"@wcpos/core": "*",
		"electron-log": "^4.4.6",
		"expo": "44.0.6",
		"expo-status-bar": "1.3.0",
		"react": "17.0.2",
		"react-dom": "18.1.0",
		"react-native": "0.64.3",
		"react-native-get-random-values": "1.7.2",
		"react-native-pager-view": "5.4.15",
		"react-native-reanimated": "2.8.0",
		"react-native-safe-area-context": "4.2.5",
		"react-native-screens": "3.13.1",
		"react-native-svg": "12.3.0",
		"react-native-web": "0.17.7",
		"update-electron-app": "^2.0.1"
	},
	"devDependencies": {
		"@babel/core": "7.17.9",
		"@expo/electron-adapter": "0.0.55",
		"@expo/webpack-config": "0.16.23",
		"@svgr/webpack": "5.5.0",
		"@types/react": "17.0.44",
		"@types/react-native": "0.67.6",
		"@wcpos/babel-preset-expo": "*",
		"@wcpos/eslint-config": "*",
		"electron": "18.1.0",
		"electron-builder": "^23.0.8",
		"electron-devtools-installer": "^3.2.0",
		"electron-webpack": "^2.8.2",
		"react-native-svg-transformer": "1.0.0",
		"typescript": "4.6.3",
		"url-loader": "^4.1.1",
		"webpack": "4.46.0"
	}
}
